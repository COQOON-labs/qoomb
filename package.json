{
  "name": "qoomb",
  "version": "0.1.0",
  "private": true,
  "description": "Privacy-first family organization platform",
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "Benjamin Gr√∂ner <bgroener@coqoon.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/COQOON-labs/qoomb.git"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint:json": "eslint --config eslint.config.json-lint.js \"**/*.json\" --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern coverage --ignore-pattern .turbo --ignore-pattern pnpm-lock.yaml",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo run type-check",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "pnpm docker:down && pnpm docker:up",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "docker:status": "docker-compose ps",
    "db:generate": "pnpm --filter @qoomb/api run db:generate",
    "db:migrate": "pnpm --filter @qoomb/api prisma migrate deploy",
    "db:migrate:dev": "pnpm --filter @qoomb/api prisma migrate dev",
    "db:studio": "pnpm --filter @qoomb/api prisma studio",
    "db:push": "pnpm --filter @qoomb/api prisma db push",
    "db:reset": "pnpm --filter @qoomb/api prisma migrate reset",
    "setup": "pnpm install && pnpm docker:up && pnpm db:generate && pnpm db:migrate",
    "start": "pnpm docker:up",
    "stop": "pnpm docker:down",
    "prepare": "husky",
    "licenses": "pnpm licenses list",
    "licenses:json": "pnpm licenses list --json > licenses.json",
    "sbom": "npx @cyclonedx/cyclonedx-npm --output-file sbom.json --output-format JSON"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "dotenv-cli": "^11.0.0",
    "eslint-plugin-jsonc": "^3.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.29.3",
  "pnpm": {
    "overrides": {
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "hono@<4.12.2": ">=4.12.2",
      "rollup@>=4.0.0 <4.59.0": ">=4.59.0",
      "tar@<7.5.7": ">=7.5.7",
      "@types/node": "^25.2.2",
      "ajv@>=8.0.0 <8.18.0": "8.18.0",
      "minimatch": "10.2.1"
    }
  }
}
