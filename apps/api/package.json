{
  "name": "@qoomb/api",
  "version": "0.1.0",
  "private": true,
  "license": "SEE LICENSE IN ../../LICENSE.md",
  "main": "./src/main.ts",
  "types": "./src/main.ts",
  "exports": {
    "./src/trpc/app.router": {
      "types": "./src/trpc/app.router.ts"
    }
  },
  "scripts": {
    "dev": "dotenv -e ../../.env -- nest start --watch",
    "build": "nest build",
    "start": "node dist/main",
    "start:prod": "node dist/main",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --passWithNoTests",
    "db:migrate": "dotenv -e ../../.env -- prisma migrate deploy",
    "db:generate": "dotenv -e ../../.env -- prisma generate",
    "db:push": "dotenv -e ../../.env -- prisma db push",
    "db:seed": "dotenv -e ../../.env -- prisma db seed",
    "db:studio": "dotenv -e ../../.env -- prisma studio --port 5555 --browser none",
    "db:reencrypt": "dotenv -e ../../.env -- ts-node --project tsconfig.seed.json prisma/scripts/reencrypt.ts"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.2",
    "@nestjs/common": "^11.1.14",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.14",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-fastify": "^11.1.14",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@simplewebauthn/server": "^13.2.2",
    "@trpc/server": "^11.10.0",
    "bcrypt": "^6.0.0",
    "fastify": "^5.7.4",
    "handlebars": "^4.7.8",
    "nodemailer": "^8.0.1",
    "pg": "^8.18.0",
    "redis": "^5.11.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "superjson": "^2.2.6",
    "typesafe-i18n": "^5.27.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@qoomb/eslint-config": "workspace:^",
    "@qoomb/types": "workspace:*",
    "@qoomb/validators": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prisma": "^7.4.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
