{{#> partials/layout lang=lang title=title brand=brand unsubscribeNote=unsubscribeNote}}
  {{#*inline "body"}}

    <h1 style="margin:0 0 24px;font-size:24px;font-weight:900;color:#111110;">{{title}}</h1>

    <div style="font-size:15px;line-height:1.6;color:#111110;">
      <p style="margin:0 0 12px;">{{greeting}}</p>
      <p style="margin:0 0 12px;">{{{body}}}</p>
      <p style="margin:0;">{{{validity}}}</p>
    </div>

    <!-- CTA Button -->
    <div style="margin-top:32px;">
      <a href="{{ctaUrl}}"
         style="display:inline-block;background:#F5C400;color:#000;font-weight:900;font-size:14px;
                padding:12px 28px;border-radius:8px;text-decoration:none;letter-spacing:0.04em;
                text-transform:uppercase;">
        {{cta}}
      </a>
    </div>

    <!-- Fallback URL -->
    <p style="margin-top:24px;font-size:12px;color:#6B6B65;">
      {{fallbackLinkLabel}}<br />
      <a href="{{ctaUrl}}" style="color:#111110;word-break:break-all;">{{ctaUrl}}</a>
    </p>

    <!-- Footer note -->
    <p style="margin-top:24px;padding-top:20px;border-top:1px solid #DDDCDA;font-size:12px;color:#6B6B65;margin-bottom:0;">
      {{footer}}
    </p>

  {{/inline}}
{{/partials/layout}}
