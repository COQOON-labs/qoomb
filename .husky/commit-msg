# Block AI tool co-author trailers
if grep -iEq "^co-authored-by:.*(claude|copilot|chatgpt|\bgpt[-\s]|openai|anthropic|gemini|codeium|tabnine)" "$1"; then
  echo ""
  echo "‚ùå Commit rejected: AI tool co-author trailer detected."
  echo "   Remove any 'Co-Authored-By: <AI tool>' lines from the commit message."
  echo ""
  exit 1
fi

pnpm exec commitlint --edit "$1"
